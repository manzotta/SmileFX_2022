<Page
    x:Class="SmileFX_2022.Views.AddInstrumentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmileFX_2022.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SmileFX_2022.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:AddInstrumentPageViewModel/>
    </Page.DataContext>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="1" Header="Base currency:" PlaceholderText="GBP" 
                 Text="{Binding BaseCurrency, Mode=TwoWay}" Margin="0,20,0,0" />

        <TextBox Grid.Row="2" Header="Quote currency:"
                 Text="{Binding QuoteCurrency, Mode=TwoWay}" PlaceholderText="USD" Margin="0,20,0,0" />

        <Button Grid.Row="3" Style="{StaticResource AccentButtonStyle}" Content="Add Instrument" 
                Command="{Binding AddInstrumentCommand}"
                Margin="0,20,0,0" HorizontalAlignment="Center" />

    </Grid>
</Page>
