<Page
    x:Class="SmileFX_2022.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmileFX_2022.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SmileFX_2022.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:CreateOrderPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="1" Header="Base currency:" PlaceholderText="" 
                 Text="{Binding BaseCurrency, Mode=TwoWay}" Margin="10,10,10,0" />

        <TextBox Grid.Row="2" Header="Quote currency:"
                 Text="{Binding QuoteCurrency, Mode=TwoWay}" PlaceholderText="" Margin="10,10,10,0" />

        <ComboBox Grid.Row="3" Header="Position Type" SelectedItem="{Binding PosType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  PlaceholderText="Define Position Type" Width="200" Margin="10,10,0,0">
            <ComboBoxItem>Long</ComboBoxItem>
            <ComboBoxItem>Short</ComboBoxItem>
        </ComboBox>

        <Button Grid.Row="4" Style="{StaticResource AccentButtonStyle}" Content="Create Order" 
                FontSize="16" FontWeight="Bold" 
                Command="{Binding CreateOrderCommand}"
                Margin="0,20,0,0" HorizontalAlignment="Center" />

    </Grid>
</Page>
